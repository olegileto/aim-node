    <link type="text/css" href="">
    <title><%= title %></title>
</head>
<body>
    <form method="POST" action="addWorker">
        <input type="text" placeholder="Enter name" name="workerName">
        <input type="text" placeholder="Enter email" name="workerEmail" class=<%= mailValidation ? 'error' : null%>>
